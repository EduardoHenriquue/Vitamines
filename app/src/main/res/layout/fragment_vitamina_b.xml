<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Funções no Organismo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_funcoes_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_funcoes_no_organismo"
                android:textSize="@dimen/text_title"
                android:textColor="@color/title_primary"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:id="@+id/text_complexo_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_complexo_b"
                android:textSize="@dimen/text_info"
                android:textColor="@color/title_secundary"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"

                />
            <TextView
                android:id="@+id/text_funcoes_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_funcoes_no_organismo_vitamina_b"
                android:textSize="@dimen/text_info"
                android:textColor="@color/txt_info"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>

        <!-- Problemas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_problemas_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_problemas"
                android:textSize="@dimen/text_title"
                android:textColor="@color/title_primary"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:id="@+id/text_avitaminoses_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_avitaminoses"
                android:textSize="@dimen/text_info"
                android:textColor="@color/title_secundary"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView
                android:id="@+id/text_problemas_vitamina_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_problemas_avitaminoses_b"
                android:textSize="@dimen/text_info"
                android:textColor="@color/txt_info"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>

        <!-- Fontes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_fontes_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_fontes"
                android:textSize="@dimen/text_title"
                android:textColor="@color/title_primary"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

            <TextView
                android:id="@+id/title_frutas_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_frutas"
                android:textSize="@dimen/text_info"
                android:textColor="@color/title_secundary"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

            <!-- Frutas -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/bananas"
                        />
                    <TextView
                        android:id="@+id/text_fruta_banana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_banana"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/abacate"
                        />
                    <TextView
                        android:id="@+id/text_fruta_abacate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_abacate"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/morangos"
                        />
                    <TextView
                        android:id="@+id/text_fruta_morango"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_morango"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:visibility="visible"
                >

            </View>

            <!-- Vegetais -->
            <TextView
                android:id="@+id/title_vegetais_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_vegetais_e_graos"
                android:textSize="@dimen/text_info"
                android:textColor="@color/title_secundary"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/espinafre"
                        />
                    <TextView
                        android:id="@+id/text_vegetais_espinafre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_espinafre"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/couve"
                        />
                    <TextView
                        android:id="@+id/text_vegetais_couve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_couve"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/milho"
                        />
                    <TextView
                        android:id="@+id/text_vegetais_milho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_milho"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="135dp"
                        android:src="@drawable/soja"
                        />
                    <TextView
                        android:id="@+id/text_vegetais_soja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_soja"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:visibility="visible"
                >

            </View>

            <!-- Outros alimentos -->
            <TextView
                android:id="@+id/title_outras_fontes_vitamina_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_outras_fontes"
                android:textSize="@dimen/text_info"
                android:textColor="@color/title_secundary"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/carnes"
                        />
                    <TextView
                        android:id="@+id/text_outras_fontes_carnes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_carnes"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/levedo"
                        />
                    <TextView
                        android:id="@+id/text_outras_fontes_levedo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_levedo"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/produtos_lacteos"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        />
                    <TextView
                        android:id="@+id/text_outras_fontes_produtos_lacteos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_produtos_lacteos"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/batatas"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        />
                    <TextView
                        android:id="@+id/text_outras_fontes_batatas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_batatas"
                        android:textSize="@dimen/text_info"
                        android:textColor="@color/txt_info"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
